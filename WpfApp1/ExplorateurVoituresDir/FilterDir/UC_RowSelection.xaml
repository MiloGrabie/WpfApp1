<UserControl x:Class="WpfApp1.ExplorateurVoituresDir.FilterDir.UC_RowSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.ExplorateurVoituresDir.FilterDir"
             mc:Ignorable="d"
             d:DesignHeight="194.5" d:DesignWidth="20" MinHeight="100" MinWidth="120" MaxHeight="250">

    <Grid Background="White" Margin="2,2,-40,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="2" Grid.Row="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" >
                <StackPanel x:Name="MainStackPanel" >
                    <CheckBox Content="(Sélectioner tout)" IsChecked="True"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Button Content="Appliquer" HorizontalAlignment="Right" Margin="0,0,2,2" VerticalAlignment="Bottom" Width="75" Grid.Row="2" Height="20"/>
        <TextBox TextWrapping="Wrap" Text="TextBox" Margin="2,2,2,0"/>
    </Grid>
</UserControl>
